              </li>
                {{!-- <li class="nav-item">
                  <a class="nav-link" href="/dashboard">Dashboard</a>
                </li> --}}
              {{#if logged_in}}
                <li class="nav-item">
                  <a class="nav-link" href="#" id="employee-logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/signup">Sign Up</a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container" style="margin-bottom: 15vh;">
      {{{body}}}
