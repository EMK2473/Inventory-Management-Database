<main class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2 class="card-title">{{product.product_name}}</h2>
    </div>
    <div class="card-body">
      <form id="editProductForm">
        <div class="mb-3">
          <label for="priceInput" class="form-label">Price</label>
          <input type="number" class="form-control" id="priceInput" value="{{product.price}}" required>
        </div>
        <div class="mb-3">
          <label for="unitInput" class="form-label">Unit</label>
          <input type="text" class="form-control" id="unitInput" value="{{product.unit}}" required>
        </div>
        <div class="mb-3">
          <label for="parInput" class="form-label">Par</label>
          <input type="number" class="form-control" id="parInput" value="{{product.par}}" required>
        </div>
        <div class="mb-3">
          <label for="stockInput" class="form-label">Stock</label>
          <input type="number" class="form-control" id="stockInput" value="{{product.stock}}" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Product</button>
      </form>
      <button class="btn btn-danger mt-2 delete-product-btn" data-product-id="{{product.id}}">Delete Product</button>
    </div>
  </div>
</main>